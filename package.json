{
  "name": "innovazione-webcomp",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "rm -rf dist && npx @tailwindcss/cli -i ./src/index.css -o ./src/output.css && bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*' && cp ./dist/index*.js ./dist/innovazione-webcomp.js && cp ./dist/index*.css ./dist/innovazione-webcomp.css",
    "start": "NODE_ENV=production bun src/index.ts"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.1",
    "@tailwindcss/cli": "^4.1.18",
    "@types/pdfmake": "^0.2.12",
    "clsx": "^2.1.1",
    "html-entities": "^2.6.0",
    "pdfmake": "^0.2.21",
    "react": "^19",
    "react-dom": "^19",
    "react-to-webcomponent": "^2.0.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4.1.18"
  },
  "module": "src/index.ts",
  "peerDependencies": {
    "typescript": "^5"
  }
}
